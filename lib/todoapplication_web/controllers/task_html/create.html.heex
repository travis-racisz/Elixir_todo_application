<.simple_form :let={f} for={@changeset} action={~p"/tasks"}>
  <.input
    field={{:title}}
    name="title"
    value=""
    type="text"
    placeholder="whats your task called?"
  />

  <.input
    field={{:description}}
    name="description"
    value=""
    type="text"
    placeholder="what needs to be done?"
  />
  <:actions>
    <.button style="display:none">Save Item</.button>
  </:actions>
</.simple_form>
